{
  "name": "@mathieu-bour/setup-gcloud",
  "version": "1.3.1",
  "description": "Install the Google Cloud SDK in your GitHub Actions workflow.",
  "keywords": [
    "github-actions",
    "actions",
    "google-cloud-sdk",
    "gcloud "
  ],
  "homepage": "https://github.com/mathieu-bour/setup-gcloud#readme",
  "bugs": {
    "email": "mathieu.tin.bour@gmail.com",
    "url": "https://github.com/mathieu-bour/setup-gcloud/issues"
  },
  "license": "MIT",
  "author": {
    "name": "Mathieu Bour",
    "email": "mathieu.tin.bour@gmail.com",
    "url": "https://github.com/mathieu-bour"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mathieu-bour/setup-gcloud.git"
  },
  "scripts": {
    "clean": "rimraf dist",
    "build": "esbuild src/main.ts --platform=node --target=node12 --bundle --outfile=dist/index.js --sourcemap --analyze --color=true",
    "run": "pnpm build && node -r dotenv/config dist/index.js dotenv_config_path=.env.local",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint \"src/**\"",
    "lint:fix": "eslint --fix \"src/**\""
  },
  "dependencies": {
    "@actions/core": "^1.2.6",
    "@actions/exec": "^1.0.4",
    "@actions/io": "^1.1.1",
    "@actions/tool-cache": "^1.6.1",
    "source-map-support": "^0.5.19"
  },
  "devDependencies": {
    "@arkweid/lefthook": "^0.7.7",
    "@csquare/prettier-config": "^1.2.0",
    "@swc-node/jest": "^1.3.3",
    "@types/jest": "^27.0.2",
    "@types/node": "^12",
    "@typescript-eslint/eslint-plugin": "^4.14.0",
    "@typescript-eslint/parser": "^4.14.0",
    "dotenv": "^10.0.0",
    "esbuild": "^0.13.8",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^6.14.0",
    "jest": "^27.3.0",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "standard-commit": "^4.2.4",
    "typescript": "^4.1.3"
  },
  "private": true,
  "prettier": "@csquare/prettier-config"
}
